<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="form-group">
    <label for="exampleInputEmail1">Title</label>
    <input name="postTitle" type="title" class="form-control" placeholder="Enter post title.">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Post</label>
    <textarea name="postBody" class="form-control" placeholder="Write your post" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>



